<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_reminder_name"
        android:text="Task name"
        android:textSize="20sp" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_reminder_name"
        android:id="@+id/cb_reminder_is_done"
        />
    <ImageView
        android:layout_marginLeft="5dp"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/icons8_edit_48"
        android:layout_below="@+id/tv_reminder_name"
        android:layout_toRightOf="@+id/cb_reminder_is_done"
        android:id="@+id/img_icon_reminder_edit"/>
    <ImageView
        android:layout_marginLeft="5dp"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/icons8_trash_48"
        android:layout_below="@+id/tv_reminder_name"
        android:layout_toRightOf="@+id/img_icon_reminder_edit"
        android:id="@+id/img_icon_reminder_delete"/>
    <TextView
        android:layout_marginLeft="5dp"
        android:layout_width="70dp"
        android:layout_height="32dp"
        android:layout_below="@+id/tv_reminder_name"
        android:layout_toRightOf="@+id/img_icon_reminder_delete"
        android:textSize="15sp"
        android:text="11:55 AM"
        android:gravity="center"
        android:id="@+id/tv_reminder_time"
        />
    <TextView
        android:layout_marginLeft="5dp"
        android:layout_width="90dp"
        android:layout_height="32dp"
        android:layout_below="@+id/tv_reminder_name"
        android:layout_toRightOf="@+id/tv_reminder_time"
        android:textSize="15sp"
        android:text="20/04/2018"
        android:gravity="center"
        android:id="@+id/tv_reminder_date"
        />
    <TextView
        android:layout_marginLeft="5dp"
        android:layout_width="95dp"
        android:layout_height="32dp"
        android:layout_below="@+id/tv_reminder_name"
        android:layout_toRightOf="@+id/tv_reminder_date"
        android:text="Not repeat"
        android:gravity="center"
        android:id="@+id/tv_reminder_repeat_type"
        />
</RelativeLayout>